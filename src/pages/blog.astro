---
import { getCollection } from 'astro:content';
import Layout from '@layouts/Layout.astro';
import PostList from '@components/PostList.astro';
import Main from '@components/Main.astro';
import H1 from '@components/H1.astro';
import Pagination from '@components/Pagination.astro';

const posts = (await getCollection('posts')).splice(0, 6);
---

<Layout
    title="Blog - Rythm Nation"
    description="Read and learn from the best music producers and enthusiasts">
    <Main>
        <H1 text="Rythm Nation Blog" />
        <p class="text-zinc-900 text-2xl mb-24 max-sm:mb-14">Join the Community and learn from Music Producers and Enthusiasts</p>

        <div class="mb-12">
            <Pagination nextUrl="/blog/2" />
        </div>
        <PostList posts={posts} />
        <div class="mb-36">
            <Pagination nextUrl="/blog/2" />
        </div>
    </Main>
</Layout>
